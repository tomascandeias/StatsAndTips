<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gameTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Equipa A x Equipa B"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/local"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Local:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/localVal"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Portugal"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dataHora"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Date:"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dataHoraVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="18:00"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/win"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:text="Win"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/draw"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Draw"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/loss"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Loss"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/win_draw"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Win/Draw"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/ngolos"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Goals"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/bothScored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Both score"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/winVal"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="70"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/drawVal"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/lossVal"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:clickable="true"
                        android:gravity="right"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/winDrawVal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="75"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/goalsVal"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/bothScoredVal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>